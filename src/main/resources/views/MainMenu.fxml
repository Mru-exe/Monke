<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<StackPane xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-image: url('../monkeMenu.png');
                  -fx-background-repeat: repeat;
                  -fx-background-size: auto;
                  -fx-background-position: center;">
    <stylesheets>
        <String fx:value="/css/main.css" />
    </stylesheets>
    <children>
        <!-- Overlay menu -->
        <VBox alignment="CENTER" spacing="20.0" style="-fx-font-family: 'Press Start 2P';">
            <children>
                <Label text="send fucking help" style="-fx-font-size: 48; -fx-text-fill: #ffffff;" />
                <Button fx:id="startGameButton" onAction="#startGame" text="Start Game"/>
                <Button fx:id="selectLevelButton" onAction="#selectLevel" text="Select Level"/>
                <Button fx:id="exitButton" onAction="#exitGame" text="Exit"/>
            </children>
        </VBox>
    </children>
</StackPane>
