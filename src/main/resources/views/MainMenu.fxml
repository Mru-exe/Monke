<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<StackPane xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-image: url('/background.png');
                  -fx-background-repeat: no-repeat;
                  -fx-background-color: #242424;
                  -fx-background-size: auto;
                  -fx-background-position: center;">
    <stylesheets>
        <String fx:value="/css/main.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="20.0" style="-fx-font-family: 'Press Start 2P';">
        <Label styleClass="lbl" text="DONKEY KONG" style="-fx-font-size: 48;" />
        <Label text="but it sucks..." style="-fx-font-size: 16; -fx-padding: -16px 0px 16px 0px; -fx-text-fill: #808080" />
        <Button styleClass="btn" fx:id="startGameButton" onAction="#startGame" text="START GAME"/>
        <Button styleClass="btn" fx:id="exitButton" onAction="#exitGame" text="EXIT"/>
    </VBox>
</StackPane>
