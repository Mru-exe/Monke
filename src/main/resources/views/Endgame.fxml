<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<StackPane xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-image: url('/background.png');
                  -fx-background-repeat: repeat;
                  -fx-background-size: auto;
                  -fx-background-position: center;">
    <stylesheets>
        <String fx:value="/css/main.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="20.0" style="-fx-font-family: 'Press Start 2P';">
        <Label styleClass="lbl" fx:id="messageLabel" text="GAME OVER!" style="-fx-font-size: 48;" />
        <Button styleClass="btn" fx:id="restart" onAction="#restart" text="TRY AGAIN"/>
        <Button styleClass="btn" fx:id="backToMenuButton" onAction="#exit" text="BACK TO MAIN MENU"/>
    </VBox>
</StackPane>
